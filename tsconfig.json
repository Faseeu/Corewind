{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src", // Added baseUrl
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"] // This will now resolve to src/*
    }
  },
  "include": [
    "../next-env.d.ts", // Relative to tsconfig.json location (project root)
    "**/*.ts",          // Relative to baseUrl (src/**/*.ts)
    "**/*.tsx",         // Relative to baseUrl (src/**/*.tsx)
    "../.next/types/**/*.ts" // Relative to tsconfig.json location
  ],
  "exclude": ["node_modules", "../.next"] // Relative to tsconfig.json location
}
